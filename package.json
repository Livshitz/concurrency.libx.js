{
    "name": "promisify.libx.js",
    "version": "0.1.5",
    "description": "Promises made easy",
    "main": "./build/index.js",
    "scripts": {
        "start": "tsc -w",
        "watch": "tsc -w",
        "build": "tsc",
        "test": "jest --detectOpenHandles --runInBand",
        "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura --coverageReporters=html"
    },
    "files": [
        "dist/**",
        "src/**",
        "*.js",
        "*.ts"
    ],
    "author": "Elya Livshitz",
    "license": "MIT",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.1",
        "jest": "^24.8.0",
        "jest-junit": "^7.0.0",
        "jest-junit-reporter": "^1.1.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.5"
    },
    "jest": {
        "coverageReporters": [
            "cobertura",
            "html"
        ]
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "output": "./.tmp/test/TEST-RESULTS.xml",
        "classNameTemplate": "{classname} - {title}",
        "titleTemplate": "{classname} - {title}",
        "ancestorSeparator": " > ",
        "usePathForSuiteName": "true"
    }
}
