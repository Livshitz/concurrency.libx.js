{
    "name": "concurrency.libx.js",
    "version": "0.3.2",
    "description": "The missing piece for Async programming",
    "main": "build/index",
    "types": "src/index.ts",
    "scripts": {
        "start": "tsc -w",
        "watch": "tsc -w",
        "build": "tsc",
        "build-browser": "node node_modules/pax.libx.js/src/utils/browserify.js src/browser.ts dist -y --minify",
        "build-browser-old": "tsc -p tsconfig.browser.json",
        "test": "jest --detectOpenHandles --runInBand",
        "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura --coverageReporters=html",
        "bump": "yarn version --patch && git push --tags && yarn publish . --tag latest && git push && echo \"Successfully released version $npm_package_version!\""
    },
    "files": [
        "build/**",
        "dist/**",
        "src/**",
        "*.js",
        "*.ts"
    ],
    "author": "Elya Livshitz",
    "license": "MIT",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.1",
        "jest": "^24.8.0",
        "jest-junit": "^7.0.0",
        "jest-junit-reporter": "^1.1.0",
        "pax.libx.js": "^0.2.5",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.5"
    },
    "jest": {
        "coverageReporters": [
            "cobertura",
            "html"
        ]
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "output": "./.tmp/test/TEST-RESULTS.xml",
        "classNameTemplate": "{classname} - {title}",
        "titleTemplate": "{classname} - {title}",
        "ancestorSeparator": " > ",
        "usePathForSuiteName": "true"
    }
}
